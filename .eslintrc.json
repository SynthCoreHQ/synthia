{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "array-bracket-spacing": [
            2,
            "never"
        ],
        "block-scoped-var": 2,
        "camelcase": "error",
        "computed-property-spacing": [
            2,
            "never"
        ],
        "curly": 2,
        "eol-last": 2,
        "eqeqeq": [
            2,
            "smart"
        ],
        "max-depth": [
            1,
            3
        ],
        "max-len": [
            1,
            {
                "code": 80,
                "ignoreComments": true,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "max-statements": [
            1,
            15
        ],
        "new-cap": 1,
        "no-extend-native": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "no-unused-vars": 1,
        "no-use-before-define": [
            2,
            "nofunc"
        ],
        "object-curly-spacing": [
            2,
            "always"
        ],
        "quotes": [
            "error",
            "single",
            "avoid-escape"
        ],
        "semi": [
            2,
            "always"
        ],
        "keyword-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "space-unary-ops": 2,
        "arrow-spacing": [
            1,
            {
                "before": true,
                "after": true
            }
        ],
        "brace-style": [
            2,
            "1tbs"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "comma-spacing": 2,
        "comma-style": 2,
        "indent": [
            "error",
            4
        ],
        "no-console": 0,
        "no-empty-function": 2,
        "max-nested-callbacks": [
            2,
            {
                "max": 4
            }
        ],
        "max-statements-per-line": [
            2,
            {
                "max": 2
            }
        ],
        "no-floating-decimal": 2,
        "no-lonely-if": 2,
        "no-multi-spaces": 1,
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxEOF": 1,
                "maxBOF": 0
            }
        ],
        "no-shadow": [
            2,
            {
                "allow": [
                    "err",
                    "resolve",
                    "reject"
                ]
            }
        ],
        "no-var": 2,
        "prefer-const": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [
            2,
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "spaced-comment": 2,
        "yoda": 2,
        "multiline-ternary": 2
    }
}